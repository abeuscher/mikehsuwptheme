block template
  :php
    /*
    Template Name: Blog Entry Page
    */
    if (get_field("social_share_image")!="") {
      $override_thumb = get_field("social_share_image");
    }
block content
  :php
    if( have_posts() ){
     while( have_posts() ) {
      the_post();
      $showcta = get_field("show_cta")[0];
      $start_date = get_the_date();
  :php
    printf("<article id='%s' role='article' itemprop='haspart' itemscope='' itemtype='http://schema.org/Article' class='hero-inner'>",get_the_ID());
  meta(itemscope='itemscope',itemprop='mainEntityOfPage',itemType='https://schema.org/WebPage')
  .container
    .inner
      .text
        :php
          printf("<h1 class='white' itemprop='headline'>%s</h1>", get_the_title());   
  :php
    printf("</article>");   
  section.hero-media
    .container
        .inner-image
          :php
            $social_image = get_field("social_share_image") ? get_field("social_share_image") : get_the_post_thumbnail();
            if (get_field("show_social_share_for_mobile_header")=="no") {
              printf("<div class='blog-thumb mobile' itemprop='image' data-bg='%s' itemscope itemtype='https://schema.org/ImageObject'></div>", wp_get_attachment_image_src(get_post_thumbnail_id(),"default")[0]);
            }
            else {
              printf("<div class='blog-thumb mobile' itemprop='image' data-bg='%s' itemscope itemtype='https://schema.org/ImageObject'></div>", $social_image);
            }
            
            printf("<div class='blog-thumb hide-mobile' itemprop='image' data-bg='%s' itemscope itemtype='https://schema.org/ImageObject'></div>", wp_get_attachment_image_src(get_post_thumbnail_id(),"default")[0]);
  section.hero-blog-entry-meta
    .container
      .inner
        p.author By
          :php
            $authorslug = get_userdata(get_the_author_id())->user_nicename;
            echo " <a class='author-link' href=\"/author/$authorslug\" itemprop='author' itemscope itemtype='https://schema.org/Person'><span itemprop='name'>".get_author_name() . "</span></a>" ;
        ul.social-share
          li
            :php
              echo "<a href='https://www.facebook.com/sharer/sharer.php?u=".urlencode(get_permalink())."' target='_blank'>";
            span.fa-1x.fa-stack
              i.fa.fa-circle.fa-stack-2x
              i.fa.fa-stack-1x.fa-facebook
            :php
              echo "</a>";
          li
            :php
              echo "<a href='https://twitter.com/intent/tweet?text=".urlencode(get_the_title()." by ".get_author_name())."&url=".urlencode(get_permalink())."' target='_blank'>";
            span.fa-1x.fa-stack
              i.fa.fa-circle.fa-stack-2x
              i.fa.fa-stack-1x.fa-twitter
              :php
                echo "</a>"; 
  section.container.blog-content
    .container.padding-top
      .row
        .col-md-9.blog-content.no-padding(itemprop="articleBody")
          :php
            the_content();
    .row
      .col-md-9.author-bio
        h2.header-right Post Author
        :php
          global $authordata;
          $meta = get_user_meta($authordata->data->ID);
          printf("<div class='author-thumb' data-bg='%s'></div>",$meta["image"][0]);
        .author-description
          ul.social-share
            :php
              if($meta["ts_fab_twitter"][0]!="") {
                echo "<li><a href='https://twitter.com/".$meta["ts_fab_twitter"][0]."' target='_blank'>";
            span.fa-1x.fa-stack
              i.fa.fa-circle.fa-stack-2x
              i.fa.fa-stack-1x.fa-twitter
              :php
                echo "</a></li>";
                }
                if($meta["ts_fab_linkedin"][0]!="") {
                  echo "<li><a href='".$meta["ts_fab_linkedin"][0]."' target='_blank'>";
            span.fa-1x.fa-stack
              i.fa.fa-circle.fa-stack-2x
              i.fa.fa-stack-1x.fa-linkedin
              :php
                echo "</a></li>";
                }
          h3
            :php
              echo $meta["first_name"][0]." ".$meta["last_name"][0];
          :php
            if($meta["description"][0]!="") {
            echo $meta["description"][0];
            }

              }}
